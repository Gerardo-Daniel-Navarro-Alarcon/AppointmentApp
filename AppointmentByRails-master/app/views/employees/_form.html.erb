<!-- app/views/employees/_form.html.erb -->

<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(employee.errors.count, "error") %> impidieron que este empleado fuera guardado:</h2>
      <ul>
        <% employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Campo: Nombre -->
  <div class="mb-3">
    <%= form.label :first_name, "Nombre", class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control", required: true %>
  </div>

  <!-- Campo: Apellido -->
  <div class="mb-3">
    <%= form.label :last_name, "Apellido", class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control", required: true %>
  </div>

  <!-- Campo: Email -->
  <div class="mb-3">
    <%= form.label :email, "Correo Electrónico", class: "form-label" %>
    <%= form.email_field :email, class: "form-control", required: true %>
  </div>

  <!-- Campo: Contraseña -->
  <div class="mb-3">
    <%= form.label :password, "Contraseña", class: "form-label" %>
    <%= form.password_field :password, class: "form-control", required: true %>
  </div>

  <!-- Campo: Confirmar Contraseña -->
  <div class="mb-3">
    <%= form.label :password_confirmation, "Confirmar Contraseña", class: "form-label" %>
    <%= form.password_field :password_confirmation, class: "form-control", required: true %>
  </div>

  <!-- Campo: Rol -->
  <div class="mb-3">
    <%= form.label :role_id, "Rol", class: "form-label" %>
    <%= form.collection_select :role_id, @roles, :id, :name, { prompt: "Selecciona un rol" }, class: "form-select", required: true %>
  </div>

  <!-- Campo: Número de Teléfono -->
  <div class="mb-3">
    <%= form.label :phone_number, "Número de Teléfono", class: "form-label" %>
    <%= form.telephone_field :phone_number, class: "form-control", required: true %>
  </div>

  <!-- Campo: Activo -->
  <div class="mb-3 form-check">
    <%= form.check_box :active, class: "form-check-input" %>
    <%= form.label :active, "Activo", class: "form-check-label" %>
  </div>

  <!-- Botón de Envío -->
  <%= form.submit class: "btn btn-primary" %>
<% end %>
