
<% provide(:title, 'Editar Cita') %>

<section class="container mt-5">
  <h1 class="text-primary fw-bold mb-4">Editar Cita</h1>

  <div class="card shadow-sm p-4">
    <%= render 'form' %>
  </div>

  <% if @appointment.errors.any? %>
    <div class="alert alert-danger mt-4">
      <h4><%= pluralize(@appointment.errors.count, "error") %> impidieron guardar esta cita:</h4>
      <ul>
        <% @appointment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to 'Volver', appointments_path, class: 'btn btn-outline-secondary' %>
  </div>
</section>